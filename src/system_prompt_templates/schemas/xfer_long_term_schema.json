{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/xfer-long-term-schema.json",
  "title": "Output Schema for Long Term Memory Transfer",
  "description": "Memetic Agent Output Schema for Transferring Memories to Long Term Storage",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "statement": {
        "type": "string",
        "description": "The complete factual statement"
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Certainty level of the memory"
      },
      "category": {
        "type": "string",
        "enum": ["fact", "preference", "capability", "relationship", "belief", "goal"],
        "description": "Classification of the memory type"
      },
      "metatags": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^#[a-zA-Z0-9_-]+$"
        },
        "description": "Semantic tags for memory linking"
      },
      "thoughts": {
        "type": "string",
        "description": "Analysis of the memory's usefulness"
      }
    },
    "required": ["statement", "confidence", "category", "metatags", "thoughts"],
    "additionalProperties": false
  }
}
